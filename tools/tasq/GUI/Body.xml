<xpp:cdata
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:xpp="http://epeios.q37.info/ns/xpp"
  xmlns:xdh="http://epeios.q37.info/ns/xdhtml">
  <div style="display: flex; flex-direction: column;">
    <fieldset>
      <fieldset id="Tree"></fieldset>
      <div class="buttons">
        <button xdh:onevent="New">New</button>
        <button xdh:onevent="Edit">Edit</button>
      </div>
    </fieldset>
    <fieldset>
      <div>
        <fieldset id="TitleView"></fieldset>
        <input style="width: 100%;" class="hide" id="TitleEdition"/>
        <fieldset>
          <div id="DescriptionView" style="width: 500px; height: 100px; overflow: auto;"></div>
          <textarea class="hide" id="DescriptionEdition"></textarea>
        </fieldset>
        <div class="buttons">
          <button xdh:onevent="Edit">Edit</button>
          <button xdh:onevent="Submit">Submit</button>
          <button xdh:onevent="Delete">Delete</button>
          <button xdh:onevent="Cancel">Cancel</button>
        </div>
      </div>
    </fieldset>
  </div>
</xpp:cdata>