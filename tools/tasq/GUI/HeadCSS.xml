<xpp:bloc xmlns="http://www.w3.org/1999/xhtml" xmlns:xpp="http://epeios.q37.info/ns/xpp">
<style>
  .selected {
    background-color: bisque;
  }

  .item {
    cursor: pointer;
  }

  .item-ul {
    padding-left: 10px;
  }
  
  .item-li-with-child {
    list-style: none;
  }

  .item-li-without-child {
    list-style: "  ";
  }

  details > .item-summary {
    list-style: "+ ";
  }  

  details[open] > .item-summary {
    list-style: "- ";
  }

  .hide {
    display: none;
  }
</style>
</xpp:bloc>